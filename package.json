{
	"name": "life-tracker",
	"private": true,
	"engines": {
		"node": "^22.14.0",
		"npm": "^10.9.2",
		"pnpm": "^10.11.0"
	},
	"packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
	"type": "module",
	"scripts": {
		"postinstall": "pnpm prisma:generate",
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"test": "vitest",
		"test:unit": "vitest run --config vitest.unit.config.ts",
		"coverage": "vitest run --coverage",
		"lint": "pnpm biome lint --write ./src",
		"format": "pnpm biome format --write ./src",
		"typecheck": "tsc",
		"prisma:generate": "prisma generate --no-engine && pnpm run prisma:generate-dmmf",
		"prisma:migrate-dev": "dotenv -e .env.development prisma migrate dev",
		"prisma:migrate-deploy": "dotenv -e .env.production prisma migrate deploy",
		"prisma:seed": "dotenv -e .env.development prisma db seed",
		"prisma:generate-dmmf": "tsx prisma/generate-dmmf.ts",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"prisma": {
		"seed": "tsx prisma/seed.ts"
	},
	"imports": {
		"#lib/db": {
			"storybook": "./src/lib/db.mock.ts",
			"default": "./src/lib/db.ts"
		},
		"#lib/i18n/server": {
			"storybook": "./src/lib/i18n/server.mock.ts",
			"default": "./src/lib/i18n/server.ts"
		},
		"#lib/auth": {
			"storybook": "./src/lib/auth.mock.ts",
			"default": "./src/lib/auth.ts"
		},
		"#*": ["./src/*", "./src/*.ts", "./src/*.tsx"]
	},
	"dependencies": {
		"@conform-to/react": "^1.10.1",
		"@conform-to/zod": "^1.10.1",
		"@prisma/extension-accelerate": "^2.0.1",
		"@radix-ui/react-dialog": "^1.0.5",
		"@radix-ui/react-dropdown-menu": "^2.0.6",
		"@radix-ui/react-icons": "^1.3.0",
		"@radix-ui/react-slot": "^1.0.2",
		"@radix-ui/react-toast": "^1.1.5",
		"@sentry/nextjs": "^9.30.0",
		"@vercel/analytics": "^1.5.0",
		"@vercel/speed-insights": "^1.2.0",
		"bcryptjs": "^3.0.2",
		"clsx": "^2.1.0",
		"date-fns": "^4.1.0",
		"jose": "^6.0.11",
		"lucide-react": "^0.510.0",
		"next": "15.4.0-canary.82",
		"next-intl": "^4.1.0",
		"nodemailer": "^7.0.3",
		"openai": "^5.12.1",
		"react": "^19.0.0",
		"react-day-picker": "^9.9.0",
		"react-dom": "^19.0.0",
		"react-markdown": "^10.1.0",
		"tailwind-merge": "^3.3.0",
		"zod": "^3.24.4"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@chromatic-com/storybook": "^3",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@prisma/client": "^6.8.2",
		"@storybook/addon-essentials": "^8.6.12",
		"@storybook/blocks": "^8.6.12",
		"@storybook/experimental-addon-test": "^8.6.12",
		"@storybook/experimental-nextjs-vite": "8.6.12",
		"@storybook/react": "^8.6.12",
		"@storybook/test": "^8.6.12",
		"@tailwindcss/postcss": "^4.1.6",
		"@tailwindcss/typography": "^0.5.10",
		"@total-typescript/tsconfig": "^1.0.4",
		"@types/node": "^22.15.17",
		"@types/nodemailer": "^6.4.17",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@vitest/browser": "^3.1.3",
		"@vitest/coverage-v8": "^3.1.3",
		"autoprefixer": "^10.4.17",
		"babel-plugin-react-compiler": "19.1.0-rc.2",
		"dotenv-cli": "^7.4.1",
		"lefthook": "^1.11.14",
		"mockdate": "^3.0.5",
		"playwright": "^1.52.0",
		"postcss": "^8.4.35",
		"prisma": "^5.22.0",
		"prisma-mock": "^0.10.3",
		"storybook": "^8.6.12",
		"tailwindcss": "^4.1.6",
		"tsx": "^4.19.4",
		"typescript": "^5",
		"vercel": "^42.3.0",
		"vitest": "^3.1.3"
	}
}
