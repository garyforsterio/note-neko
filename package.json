{
	"name": "life-tracker",
	"private": true,
	"engines": {
		"node": "^22.14.0",
		"npm": "^10.9.2",
		"pnpm": "^10.11.0"
	},
	"packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
	"type": "module",
	"scripts": {
		"postinstall": "pnpm prisma:generate",
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"test": "vitest run --config vitest.unit.config.ts",
		"test:watch": "vitest --config vitest.unit.config.ts",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"lint": "pnpm biome lint --write ./src",
		"format": "pnpm biome format --write ./src",
		"typecheck": "tsc",
		"prisma:generate": "prisma generate",
		"prisma:migrate-dev": "dotenv -e .env.development prisma migrate dev",
		"prisma:migrate-deploy": "dotenv -e .env.production prisma migrate deploy",
		"prisma:seed": "dotenv -e .env.development prisma db seed",
		"db:backup": "dotenv -e .env.production -- bash scripts/backup-db.sh"
	},
	"imports": {
		"#lib/db": "./src/lib/db.ts",
		"#lib/i18n/server": "./src/lib/i18n/server.ts",
		"#lib/auth": "./src/lib/auth.ts",
		"#actions/auth": "./src/actions/auth.ts",
		"#generated/prisma": "./src/generated/prisma/client.ts",
		"#*": [
			"./src/*",
			"./src/*.ts",
			"./src/*.tsx"
		]
	},
	"dependencies": {
		"@conform-to/react": "^1.10.1",
		"@conform-to/zod": "^1.10.1",
		"@prisma/client": "~7.4.1",
		"@radix-ui/react-dialog": "^1.0.5",
		"@radix-ui/react-dropdown-menu": "^2.0.6",
		"@radix-ui/react-icons": "^1.3.0",
		"@radix-ui/react-slot": "^1.0.2",
		"@radix-ui/react-toast": "^1.1.5",
		"@sentry/nextjs": "^10.36.0",
		"@vercel/analytics": "^1.5.0",
		"@vercel/speed-insights": "^1.2.0",
		"@vis.gl/react-google-maps": "^1.7.1",
		"bcryptjs": "^3.0.2",
		"clsx": "^2.1.0",
		"date-fns": "^4.1.0",
		"import-in-the-middle": "3.0.0",
		"jose": "^6.0.11",
		"lucide-react": "^0.564.0",
		"next": "16.1.6",
		"next-intl": "^4.4.0",
		"nodemailer": "^8.0.1",
		"openai": "^6.16.0",
		"react": "19.2.4",
		"react-day-picker": "^9.9.0",
		"react-dom": "19.2.4",
		"react-markdown": "^10.1.0",
		"require-in-the-middle": "8.0.1",
		"tailwind-merge": "^3.3.0",
		"zod": "^3.24.4"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.15",
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@playwright/test": "^1.58.0",
		"@tailwindcss/postcss": "^4.1.6",
		"@tailwindcss/typography": "^0.5.10",
		"@total-typescript/tsconfig": "^1.0.4",
		"@types/google.maps": "^3.58.1",
		"@types/node": "^25.0.10",
		"@types/nodemailer": "^6.4.17",
		"@types/react": "19.2.14",
		"@types/react-dom": "19.2.3",
		"autoprefixer": "^10.4.17",
		"babel-plugin-react-compiler": "19.1.0-rc.3",
		"dotenv": "^17.2.3",
		"dotenv-cli": "^11.0.0",
		"lefthook": "^2.0.15",
		"playwright": "^1.58.0",
		"postcss": "^8.4.35",
		"prisma": "~7.4.0",
		"tailwindcss": "^4.1.6",
		"tsx": "^4.19.4",
		"typescript": "^5",
		"vercel": "^50.5.0",
		"vitest": "^4.0.10"
	},
	"pnpm": {
		"overrides": {
			"@types/react": "19.2.14",
			"@types/react-dom": "19.2.3"
		},
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"@prisma/client",
			"@prisma/engines",
			"@sentry/cli",
			"@tailwindcss/oxide",
			"@vercel/speed-insights",
			"esbuild",
			"lefthook",
			"prisma",
			"sharp",
			"unrs-resolver"
		]
	}
}
