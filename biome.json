{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!**/.cursor"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error"
			},
			"complexity": {
				"noForEach": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off"
			},
			"style": {
				"noRestrictedImports": {
					"level": "error",
					"options": {
						"paths": {
							"next/link": {
								"message": "Please import from '@/i18n/navigation' instead."
							},
							"next/navigation": {
								"message": "Please import from '@/i18n/navigation' instead.",
								"importNames": [
									"redirect",
									"permanentRedirect",
									"useRouter",
									"usePathname"
								]
							}
						}
					}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
